{
	"compilerOptions": {
		"target": "ES2024",
		"module": "ESNext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "types",
		"stripInternal": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"exactOptionalPropertyTypes": true,
		"useUnknownInCatchVariables": true
	},
	"include": [
		"source"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}